{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "PHP Server",
        "type": "php",
        "request": "launch",
        "port": 8000,
        "runtimeExecutable": "php",
        "runtimeArgs": [
          "-S",
          "localhost:8000",
          "-t",
          "${workspaceFolder}"
        ],
        "externalConsole": false,
        "internalConsoleOptions": "neverOpen"
      }
    ]
  }
  